<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- changed -->
<struts>

	<package name="basic" namespace="/basic" extends="struts-default">
		
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<interceptors>
			<interceptor name="cookie" class="com.baseframework.web.interceptor.CookieInterceptor" />
			<interceptor name="session-attribute-reset" class="com.baseframework.web.interceptor.SessionAttributeResetInterceptor" />
			<interceptor-stack name="commonStack">				
				<interceptor-ref name="cookie" />
				<interceptor-ref name="session-attribute-reset" />						
				<interceptor-ref name="exception" />
				<interceptor-ref name="alias" />
				<interceptor-ref name="chain" />
				<interceptor-ref name="scope" />
				<interceptor-ref name="servlet-config" />
				<interceptor-ref name="prepare" />
				<interceptor-ref name="checkbox" />
				<interceptor-ref name="i18n" />
				<interceptor-ref name="createSession" />
				<interceptor-ref name="debugging" />
				<interceptor-ref name="model-driven" />
				<interceptor-ref name="fileUpload" />
				<interceptor-ref name="static-params" />
				<interceptor-ref name="params" />
				<interceptor-ref name="conversionError" />
				<interceptor-ref name="validation">
					<param name="excludeMethods">input,back,cancel,browse</param>
				</interceptor-ref>
				<interceptor-ref name="workflow">
					<param name="excludeMethods">input,back,cancel,browse</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="commonStack" />

		<global-results>
			<result name="exception" type="dispatcher">/jsp/baseframework/exception.jsp</result>
			<result name="cookie_help">/jsp/baseframework/cookie_help.jsp</result>
			<result name="session_error">/jsp/baseframework/session_error.jsp</result>
		</global-results>
		<!-- 
			<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
			result="exception" />
			<exception-mapping exception="java.lang.RuntimeException"
			result="exception" />
			</global-exception-mappings>
		-->
	</package>

	<include file="com//baseframework//web//action//struts-basic.xml" />
	<include file="com//baseframework//web//security//access//struts-access.xml" />
	<include file="com//baseframework//web//security//core//userdetails//struts-user.xml" />	

</struts>